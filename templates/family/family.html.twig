{% extends 'base.html.twig' %}

{% block title %}List Family
{% endblock %}


{% block body %}
	{% include "pet/menu.html.twig" %}
	<h1 class="border border-dark rounded p-2 m-2 text-white bg-primary center">
		{% block mytitle %}List Family
		{% endblock %}
	</h1>


	<div class="list-family">
		<div class="container">
			<div class="row align-items-center justify-content-center">

				{% for f in family %}


					<div class="border-bottom border-primary">
						{{ f.lib | capitalize}}</div>

					{% for p in f.animals %}
						<div class="row align-items-center justify-content-center">
							<div class="col-2">
								<img src="{{asset('images/'~ p.image)}}">
							</div>
							<br>
							<div class="col-auto">
								Name :
								<a href="{{path('app_display',{'id': p.id})}}">
									{{ p.nom }}
								</a>
								<br>
								Description :{{ p.description }}
								<br>
								Family :{{ p.family.lib }}
							</div>

						</div>
					{% endfor %}


				{% endfor %}


			</div>

		</div>
	</div>


</div>{% endblock %}
