{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	{% include "pet/menu.html.twig" %}
	<h1 class="border border-dark rounded p-2 m-2 text-white bg-primary center">
		{% block mytitle %}welcome to my pet website
		{% endblock %}
	</h1>

	{% for p in pet  %}

		<div class="bloc-pets">
			<div class="container ">
				<div class="row align-items-center justify-content-center">
					<div class="col-2">
						<img src="{{asset('images/'~ p.image)}}">
					</div>
					<br>
					<div class="col-auto">
						Name :
						<a href="{{path('app_display',{'id': p.id})}}">
							{{ p.nom }}
						</a>
						<br>
						Description :{{ p.description }}
						<br>
						Family :{{ p.family.lib }}
						<br>
						Continent :
						{% for Contine in p.continents %}
							<a href="#" class="btn btn-warning">
								{{  Contine.lib }}
							</a>

						{% endfor %}
						<br>
						<br>
						Personne :
						{% for dispose in p.disposes %}


							<a href="#" class="btn btn-info">
								{{ dispose.personne.nom }}
							</a>
							<div class="btn btn-secondary">
								{{ dispose.nb }}
							</div>


						{% endfor %}


					</div>

					<div></div>
				</div>

			{% endfor %}


		{% endblock %}
